<div class="modal fade in" id="mEvaluar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h2 class="modal-title">Evaluar Solicitante</h2>
            </div>
            <div class="modal-body">
                           
                <div class="container">
                    @*<h2>Dynamic Pills</h2>*@                   
                    <ul class="nav nav-pills">                        
                        <li class="active" ><a data-toggle="pill" href="#menu1">Datos Reniec</a></li>
                        <li><a data-toggle="pill" href="#menu2">Información Financiera</a></li>                        
                    </ul>

                    @*<div class="row">
                        <div class='col-sm-6'>
                            <input type='text' class="form-control" id='datetimepicker1' />
                        </div>
                    </div>


                    <label>Correo</label>
                    <input type="email" class="form-control" id="email"
                           placeholder="Introduce tu email">*@


                    <div class="tab-content">                        
                        <div id="menu1" class="tab-pane fade in active">
                            <h2></h2>
                            <label>Número Documento</label>                            
                            <input type="text" class="form-control" id="NroDoc"/>
                            <label>Nombres y Apellidos</label>
                            <input type="text" class="form-control" id="NombreCompleto" />
                            <label>Fecha de Nacimiento</label>
                            <input type="text" class="form-control" id="FechNacimiento" />
                            <label>Sexo</label>
                            <input type="text" class="form-control" id="Sexo" />
                            <label>Grado de Instrucción</label>
                            <input type="text" class="form-control" id="GradoInstruccion" />
                        </div>
                        <div id="menu2" class="tab-pane fade">                            
                            <h2></h2>
                            <label>Salario</label>
                            <input type="text" class="form-control" id="Salario" />                            
                            <label>Gastos</label>
                            <input type="text" class="form-control" id="Gastos" />        
                            <label>Cargo</label>
                            <input type="text" class="form-control" id="Cargo" />        
                        </div>                    
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-success" href='#' target="_parent" id='btnAceptar' title='Evaluación Crediticia'>
                    <span>
                        Evaluación Crediticia
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

