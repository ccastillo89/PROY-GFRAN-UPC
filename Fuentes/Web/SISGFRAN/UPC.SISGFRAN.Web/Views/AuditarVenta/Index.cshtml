@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <section class="scripts">

    <script type="text/javascript">

        $(function () {
            var bindDatePicker = function () {
                $(".date").datetimepicker({
                    format: 'YYYY',
                    icons: {
                        time: "fa fa-clock-o",
                        date: "fa fa-calendar",
                        up: "fa fa-arrow-up",
                        down: "fa fa-arrow-down"
                    }
                }).find('input:first').on("blur", function () {
                    var date = parseDate($(this).val());

                    if (!isValidDate(date)) {
                        date = moment().format('');
                    }

                    $(this).val(date);
                });
            }

            var isValidDate = function (value, format) {
                format = format || false;
                if (format) {
                    value = parseDate(value);
                }

                var timestamp = Date.parse(value);

                return isNaN(timestamp) == false;
            }

            var parseDate = function (value) {
                var m = value.match(/^(\d{1,2})(\/|-)?(\d{1,2})(\/|-)?(\d{4})$/);
                if (m)
                    value = m[5] + '-' + ("00" + m[3]).slice(-2) + '-' + ("00" + m[1]).slice(-2);

                return value;
            }

            bindDatePicker();
        });

        $(document).ready(function () {
            CargarFranquicia();
            CargarPeriodo();
        });

        function CargarFranquicia() {
            $.get('@Url.Action("ListaFranquicias", "AuditarVenta")')
            .done(function (data) {
                $('#cboFranquicia').empty();
                $('#cboFranquicia').append('<option value="0">--SELECCIONAR--</option>');
                $.each(data, function (i, row) {
                    var $option = $('<option>');
                    $option.val(row.Id);
                    $option.html(row.Nombre);
                    $('#cboFranquicia').append($option);
                })
            })
            .fail(function (jqXHR, textStatus, error) {
                console.log("Post error: " + error);
            });
        }

        function CargarPeriodo() {
            $.get('@Url.Action("ListaPeriodo", "AuditarVenta")')
            .done(function (data) {
                $('#cboPeriodo').empty();
                $('#cboPeriodo').append('<option value="-1">--SELECCIONE--</option>');
                $.each(data, function (i, row) {
                    var $option = $('<option>');
                    $option.val(row.Nombre);
                    $option.html(row.Nombre);
                    $('#cboPeriodo').append($option);
                })
            })
            .fail(function (data) {
                console.log('error');
            });
        }

        function Auditar() {
            var franquiciaId = $('select[name=cboFranquicia]').val();
            //var localId = $('select[name=cboLocal]').val();
            var periodo = $('select[name=cboPeriodo]').val();
            var localId = 0;

            if (franquiciaId == -1) {
                bootbox.alert({
                    message: "Seleccione franquicia",
                    size: 'small'
                });
                return false;
            }

            //if (localId == -1) {
            //    bootbox.alert({
            //        message: "Seleccione local",
            //        size: 'small'
            //    });
            //    return false;
            //}

            if (periodo == -1) {
                bootbox.alert({
                    message: "Seleccione periodo",
                    size: 'small'
                });
                return false;
            }

            $.ajax({
                url: "/AuditarVenta/Auditar",
                type: "GET",
                data: { franquicia: franquiciaId, local: localId, periodo: periodo},
                dataType: "html",
                traditional: true,
                cache: false,
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.status == undefined) {
                        var rep = jQuery.parseJSON(data);
                        //LoadGraficoLine(rep);
                        LoadGraficoLine();
                        $("#divReporte").removeClass("ocultardiv");
                    } else {
                        if (data.status == false) {
                            bootbox.alert({
                                message: data.message,
                                size: 'small'
                            });
                        }
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    bootbox.alert('error', textStatus, 'Error');
                }
            });


        }

